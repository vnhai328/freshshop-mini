@model IEnumerable<PrjFresh.Models.tblProductPrImg>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List Products</h2>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <button type="button" class="btn waves-effect waves-light btn-outline-primary">@Html.ActionLink("Create New", "Create")</button>
                <div class="table-responsive m-t-40">
                    <table id="example23"
                           class="display nowrap table table-hover table-striped border color-bordered-table info-bordered-table"
                           cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Manufacture)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Review)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PriceSale)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageUrl)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Manufacture)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Review)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PriceSale)
                                    </td>
                                    <td>
                                        @if (item.ImageUrl != "")
                                        {
                                            <a href="#">
                                                <img src="~/assest/images/@item.ImageUrl" alt="ImgURL" height="40" class="img-rounded" />
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="#">
                                                <img src="#" alt="user" height="40" class="img-circle" />
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

